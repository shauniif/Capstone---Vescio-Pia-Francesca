@model Capstone_____Vescio_Pia_Francesca__BE_.Models.EventModel

@{
    ViewData["Title"] = "Creazione evento";
}

<h2 class="text-light d-flex align-content-center justify-content-center pt-2 h3Form">Crea l'evento</h2>
<div class="row justify-content-center align-items-center mt-2 mx-0">
    <div class="col-12 col-sm-9 col-md-4 p-0">
        <form asp-action="Create" enctype="multipart/form-data" class="formStyle">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"class="control-label labelStyle"></label>
                <input asp-for="Name" class="form-control input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"class="control-label labelStyle"></label>
                <input asp-for="Date" class="form-control input" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfEvent"class="control-label labelStyle"></label>
                <input asp-for="YearOfEvent" class="form-control input" />
                <span asp-validation-for="YearOfEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"class="control-label labelStyle"></label>
                <input asp-for="Description" class="form-control input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Influence"class="control-label labelStyle"></label>
                <input asp-for="Influence" class="form-control input" />
                <span asp-validation-for="Influence" class="text-danger"></span>

                <label asp-for="Modifier"class="control-label labelStyle"></label>
                <input asp-for="Modifier" type="number" class="form-control input" />
                <span asp-validation-for="Modifier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cover"class="control-label labelStyle"></label>
                <input asp-for="Cover" type="file" class="form-control input" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="IsChanged" class="control-label labelStyle"></label>
                <input asp-for="IsChanged" class="form-check-input" type="checkbox" class="form-control input" />
                <span asp-validation-for="IsChanged" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btnSty" />
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center my-3">
        <a asp-action="AllEvents" class="btn btnHref">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
