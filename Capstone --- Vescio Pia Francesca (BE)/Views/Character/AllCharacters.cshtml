@model IEnumerable<Capstone_____Vescio_Pia_Francesca__BE_.Entity.Character>

@{
    ViewData["Title"] = "AllCharacters";
}

<h1>AllCharacters</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guild)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                @if(item.Eco != null)
                {
                    <td>
                    @Html.DisplayFor(modelItem => item.Eco.Name)
                    </td>

                } else
                {
                    <td>Ateo</td>
                }
                    @if (item.Guild != null)
                    {
                    <td>
                            @Html.DisplayFor(modelItem => item.Guild.Name)
                    </td>

                    }
                    else
                    {
                    <td>Nessuna gilda</td>
                    }
            
            <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
        </tr>
}   
    </tbody>
</table>
