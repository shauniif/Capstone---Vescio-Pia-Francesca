@model Capstone_____Vescio_Pia_Francesca__BE_.Entity.Race

@{
    ViewData["Title"] = "Modifica razza";
}

<h2 class="text-light d-flex align-content-center justify-content-center pt-2 h3Form">Modifica la razza</h2>
<div class="row justify-content-center align-items-center mt-2 mx-0">
    <div class="col-12 col-sm-9 col-md-4 p-0">
        <form asp-action="Edit" class="formStyle">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label labelStyle"></label>
                <input asp-for="Name" class="form-control input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modifier" class="control-label labelStyle"></label>
                <input asp-for="Modifier" type="number" class="form-control input mb-3" />
                <span asp-validation-for="Modifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btnSty" />
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center mt-2">
        <a asp-action="AllRaces" class="btn btnHref">Back to List</a>
    </div
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
