@model Capstone_____Vescio_Pia_Francesca__BE_.Models.UserViewModel

@{
    ViewData["Title"] = "Registrazione";
}

<h2 class="text-light d-flex align-content-center justify-content-center pt-2 h3Form">Registrati</h2>
<div class="row justify-content-center align-items-center mt-2 mx-0">
    <div class="col-12 col-sm-9 col-md-4 p-0">
        <form asp-action="Register" class="formStyle">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label labelStyle"></label>
                <input asp-for="FirstName" class="form-control input" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label labelStyle"></label>
                <input asp-for="LastName" class="form-control input" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label labelStyle"></label>
                <input asp-for="Username" class="form-control input" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateBirth" class="control-label labelStyle"></label>
                <input asp-for="DateBirth" class="form-control input" />
                <span asp-validation-for="DateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label labelStyle"></label>
                <input asp-for="Email" class="form-control input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label labelStyle"></label>
                <input asp-for="Password" type="password" class="form-control input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btnSty" />
            </div>

        </form>
            <div class="d-flex justify-content-center my-3">
                <a asp-action="Login" class="btn btnHref">Sei registrato?</a>
            </div>
        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
