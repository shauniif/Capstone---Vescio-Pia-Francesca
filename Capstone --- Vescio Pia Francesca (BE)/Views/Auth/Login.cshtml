@model Capstone_____Vescio_Pia_Francesca__BE_.Models.LoginAdminModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-light d-flex align-content-center justify-content-center pt-5">Login</h2>
<div class="row justify-content-center align-items-center mt-2">
    <div class="col-12 col-sm-9 col-md-4 p-0">
        <form asp-action="Login" class="formStyle">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminCode" class="control-label labelStyle"></label>
                <input asp-for="AdminCode" class="form-control input" />
                <span asp-validation-for="AdminCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label labelStyle"></label>
                <input asp-for="Password" type="password" class="form-control input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary btnSty" />
            </div>
        </form>
        <div class="d-flex justify-content-center mt-2">
            <a asp-action="Register" class="btn btnHref">Non sei registrato?</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
