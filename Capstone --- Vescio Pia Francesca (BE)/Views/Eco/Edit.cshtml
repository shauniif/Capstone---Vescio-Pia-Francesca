@model Capstone_____Vescio_Pia_Francesca__BE_.Models.EcoModel

@{
    ViewData["Title"] = "Modifica Eco";
    var nations = ViewBag.Nations;
}

<h2 class="text-light d-flex align-content-center justify-content-center pt-2 h3Form">Modifica l'eco</h2>
<div class="row justify-content-center align-items-center mt-2 mx-0">
    <div class="col-12 col-sm-9 col-md-4 p-0">
        <form asp-action="Edit" enctype="multipart/form-data" class="formStyle">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Position" class="control-label labelStyle"></label>
                <input asp-for="Position" class="form-control input" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label labelStyle"></label>
                <input asp-for="Name" class="form-control input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label labelStyle"></label>
                <input asp-for="Description" class="form-control input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modifier" class="control-label labelStyle"></label>
                <input asp-for="Modifier" type="number" class="form-control input" />
                <span asp-validation-for="Modifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="NationId" class="control-label labelStyle">Nation</label>
                <label asp-for="NationId" class="control-label labelStyle">Nation</label>
                <select asp-for="NationId" class="form-select input">
                    <option value="" class="text-dark">-- Seleziona la Nazione --</option>
                    @foreach (var nation in nations)
                    {
                        if (Model.NationId == nation.Id)
                        {
                            <option value="@nation.Id" class="text-dark" selected="selected">@nation.Name</option>

                        }
                        else
                        {
                            <option value="@nation.Id" class="text-dark">@nation.Name</option>
                        }
                    }
                </select>
                
            </div>
            <div>
                <label asp-for="Photo" class="control-label labelStyle"></label>
                <input asp-for="Photo" type="file" class="form-control input" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btnSty" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
