@model Capstone_____Vescio_Pia_Francesca__BE_.Models.ArticleModel

@{
    ViewData["Title"] = "Modifica articolo";
}

<h2 class="text-light d-flex align-content-center justify-content-center pt-2 h3Form">Modifica l'articolo</h2>
<div class="row justify-content-center align-items-center mt-2 mx-0">
    <div class="col-12 col-sm-9 col-md-4 p-0">
        <form asp-action="Update" enctype="multipart/form-data" class="formStyle">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label labelStyle"></label>
                <input asp-for="Title" class="form-control input" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label labelStyle"></label>
                <input asp-for="Content" class="form-control input" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label labelStyle"></label>
                <input asp-for="Image" type="file" class="form-control input" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btnSty" />
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center mt-2">
        <a asp-action="AllArticles" class="btn btnHref">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
